{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@PageSetup": ["tests/setup/page-setup.ts"],
      "@PageUtils": ["tests/utils/page-utils.ts"],
      "@ActionUtils": ["tests/utils/action-utils.ts"],
      "@AssertUtils": ["tests/utils/assert-utils.ts"],
      "@LocatorUtils": ["tests/utils/locator-utils.ts"],
      "@ElementUtils": ["tests/utils/element-utils.ts"],
      "@TimeoutConstants": ["tests/utils/timeout-constants.ts"],
      "@OptionalParameterTypes": ["tests/setup/optional-parameter-types.ts"],
      "@CustomLogger": ["tests/setup/custom-logger.ts"]
    }
  },
  "include": ["tests/**/*.ts", "index.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}
