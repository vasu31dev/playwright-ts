{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@PageSetup": ["tests/setup/PageSetup.ts"],
      "@PageFactory": ["tests/setup/PageFactory.ts"],
      "@ActionUtils": ["tests/utils/ActionUtils.ts"],
      "@AssertUtils": ["tests/utils/AssertUtils.ts"],
      "@LocatorUtils": ["tests/utils/LocatorUtils.ts"],
      "@ElementUtils": ["tests/utils/ElementUtils.ts"],
      "@Timeouts": ["tests/utils/Timeouts.ts"],
      "@Types": ["tests/setup/Types.ts"]
    }
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules"]
}
